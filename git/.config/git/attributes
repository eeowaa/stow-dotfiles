# Shell
*.sh diff=shell

# Elisp
*.el diff=elisp

# C
*.[chi] whitespace=indent-with-non-tab

# Make
*[mM]akefile* whitespace=indent-with-non-tab diff=make
*.mk          whitespace=indent-with-non-tab diff=make
*.make        whitespace=indent-with-non-tab diff=make

# M4
*.m4 diff=m4

# Texinfo
*.texi diff=texinfo

